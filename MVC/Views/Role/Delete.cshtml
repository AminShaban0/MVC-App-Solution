@model RoleViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Are You Sure Delete @Model.RoleName  </h1>
<form asp-action="Delete" enctype="multipart/form-data">
    <div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Id"></label>
            <input class="form-control" asp-for="Id" readonly />

        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="RoleName"></label>
            <input class="form-control" asp-for="RoleName" readonly />

        </div>
        
        
    </div>
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>