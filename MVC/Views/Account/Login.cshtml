@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout1.cshtml";
}

<h1>Login</h1>
<div asp-validation-summary="All"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" method="post">
			
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />
			

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" >
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="LOGIN">
		</form>
		<br />
		<p>Don't Have An Account? <a asp-action="Register"> Sign In Now!</a></p>
		<br />
		<p> <a asp-action="ForgetPassword"> Forget Password</a></p>
	</div>
</div>
@section ValidationScriptSection{
	<partial name="_ValidationScriptsPartial" />
}