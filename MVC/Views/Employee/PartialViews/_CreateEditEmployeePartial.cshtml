@model EmployeeViewModel
@inject IUnit_Of_Work _unitofwork
@{
    var Departments = new SelectList(_unitofwork.departmentRepository.GetAllAsync().Result, nameof(Department.Id), nameof(Department.Name));
}
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
        <label class="col-form-label" asp-for="Image"></label>
        <input type="file" class="form-control-file" asp-for="Image" />
        <input asp-for="ImageName" hidden />
    </div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control" asp-for="Salary" />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Adress"></label>
    <input class="form-control" asp-for="Adress" />
    <span asp-validation-for="Adress" class="text-danger"></span>

</div>
<div class="form-group">
    <label asp-for="department" class="form-group"></label>
    <select class="form-group" asp-for="DepartmentId" asp-items="Departments">
        <option value="@null">-- Select Department --</option>
    </select>
</div>
